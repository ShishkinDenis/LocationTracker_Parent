<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examples.FirebaseCloudActivity">

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="41dp"
        android:text="Send"
        app:layout_constraintBottom_toTopOf="@+id/btnGet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="89dp"
        android:text="Get"
        app:layout_constraintBottom_toTopOf="@+id/tvShowLocation"
        app:layout_constraintStart_toStartOf="@+id/btnSend"
        app:layout_constraintTop_toBottomOf="@+id/btnSend" />

    <TextView
        android:id="@+id/tvShowLocation"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginTop="354dp"
        android:layout_marginBottom="136dp"
        android:text="tvShowLocation"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="217dp"
        android:text="Go to Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvShowLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvShowLocation" />

    <Button
        android:id="@+id/btnGoToCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="121dp"
        android:text="Go to Caledar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnGoToMap"
        app:layout_constraintTop_toBottomOf="@+id/tvShowLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>